    matchExpressions:
       - key: team
         operator: In
         values:
           -  dev
           -  prod
           -  test
  template: 
    metadata:
      name: rs1
      labels:
        team: dev
    spec: 
      containers:
        - name: nginx
          image: nginx:1.16
          ports:
            - containerPort: 80
"
