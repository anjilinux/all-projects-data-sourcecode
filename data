apiVersion: apps/v1
kind: Deployment
metadata:
   name: myredis
   labels: 
     app: myredis
spec: 
  selector:
     matchLabels:
        app: myredis
  replicas: 5
  template:
     metadata: 
        labels:
           app:  myredis
     spec: 
        containers:
        -   name: myredis
            image: redis
            ports:
            -   containerPort: 6379
                name: myredis
