apiVersion: apps/v1
kind: Deployment
metadata:
   name: webserver
   labels: 
      app: webserver
spec:
   replicas: 1
   strategy:
      type: Recreate    # see  look  
   selector: 
      matchLabels:
        app: webserver
   template:
      metadata:
         labels:
            app: webserver
      spec:
        containers:
          - name: nginx
            image: nginx:1.7.1
            ports:
              - containerPort: 80  
