                  pod-template-hash=5ddb4f4bdb
Controlled By:  ReplicaSet/nginx-5ddb4f4bdb
Containers:
  nginx:
    Image:          nginx
      Environment:    <none>
    Mounts:
      /usr/share/nginx/html from myvol (ro)
Volumes:
  myvol:
    Type:        Secret (a volume populated by a Secret)   ## see look 
    SecretName:  htmlfile      ##  see look  "
