apiVersion: v1
kind: ResourceQuota
metadata:
   name: cpuramhdd
   namespace: project1
spec:
  hard:
    pods:  "2"
    configmaps: "10"
    secrets: "9"
    services: "12"
    persistentvolumeclaims: "5"
    limits.memory:  "800Mi"
    limits.cpu:  "5"

hai@master:~/test$ kubectl apply  -f requata.yaml
resourcequota/cpuramhdd configured

