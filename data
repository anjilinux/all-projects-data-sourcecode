apiVersion: apps/v1
kind: Deployment
metadata: 
   name: nginxsurge
spec:
  replicas: 5
  strategy:
    rollingUpdate:
       maxSurge: 0            ## see look       
       maxUnavailable: 5     ## see   look  
    type: RollingUpdate     
  selector:
    matchLabels: 
       app: nginx
  template:
    metadata:
      labels: 
        app: nginx
    spec:
      containers:
        -  name: nginx
           image: nginx:1.7.1   # see look 
           ports:
             - containerPort: 80
"
