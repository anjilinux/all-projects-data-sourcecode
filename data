kind: VirtuvalService
metadata: 
  name: kiali-vurtual-service
  namespace: istio-system
spec: 
  hosts:
  - "*"
  gateways:
  - kiali-ingress-gateway    
  http:
  - match:
    - port: 15029
    route:
    - destination:
      host: kiali.istio-system.svc.cluster.local
      port:
        number: 20001
---
