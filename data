# reopened with the relevant failures.
#
apiVersion: v1
data:
  password: cmVkaGF0         ## look see  encode base64 
kind: Secret
metadata:
  creationTimestamp: "2023-01-01T11:26:01Z"
  name: book
  namespace: default
  resourceVersion: "242656"
  uid: a1461a2a-6e60-42a9-99a5-7616c04af01e
type: Opaque
