apiVersion: apps/v1
kind: Deployment
metadata: 
  name: app-deployment
spec: 
  replicas: 1
  selector:
    matchLabels: 
      chapter: istio
      topic: traffic-management
      app: app
      version: v2
  template:
    metadata: 
      name: app-pod
      labels:
        chapter: istio
        topic: traffic-management
        app: app
        version: v2
    spec: 
       containers: 
       - name: app-container
         image: deepcloud2208/app:v2
         ports:
         - containerPort: 80
---
apiVersion: v1
