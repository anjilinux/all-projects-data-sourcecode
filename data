apiVersion: apps/v1
kind: Deployment
metadata:
   name: myredis
   labels: 
     app: myredis
spec: 
  selector:
     matchLabels:
        app: myredis
  replicas: 3
  template:
     metadata: 
        labels:
           app:  myredis
     spec: 
        containers:
        -   name: myredis
            image: redis:alpine
            ports:
            -   containerPort: 6379
                name: myredis
------
            
hai@master:~/test$ kubectl apply -f redis.yaml

hai@master:~/test$ kubectl get replicaset   -o wide 
