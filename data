# Source: samsung/templates/deployment.yaml
apiVersion: apps/v1
kind: Deployment
metadata:
  name: apple-samsung
  labels:
    helm.sh/chart: samsung-0.1.0
    app.kubernetes.io/name: samsung
    app.kubernetes.io/instance: apple
    app.kubernetes.io/version: "1.16.0"
    app.kubernetes.io/managed-by: Helm
spec:
  replicas: 1
  selector:
    matchLabels:
      app.kubernetes.io/name: samsung
      app.kubernetes.io/instance: apple
  template:
    metadata:
      labels:
        app.kubernetes.io/name: samsung
        app.kubernetes.io/instance: apple
    spec:
      serviceAccountName: apple-samsung
      securityContext:
        {}
      containers:
        - name: samsung
          securityContext:
            {}
          image: "nginx:1.16.0"
          imagePullPolicy: IfNotPresent
          ports:
            - name: http
              containerPort: 80
              protocol: TCP
          livenessProbe:
            httpGet:
              path: /
              port: http
          readinessProbe:
            httpGet:
              path: /
              port: http
