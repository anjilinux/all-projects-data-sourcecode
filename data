kind: Deployment
metadata:
   name: dbserver
   labels: 
      app: dbserver
spec:
   replicas: 1
   strategy:
      type: Recreate
   selector: 
      matchLabels:
        app: dbserver
   template:
      metadata:
         labels:
            app: dbserver
      spec:
        containers:
          - name: nginx
            image: nginx:1.7.1
            ports:
              - containerPort: 80                    
