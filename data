apiVersion: apps/v1
kind: Deployment
metadata: 
   name: mysql
   labels: 
     app: mysql
spec: 
  selector:
    matchLabels:
      app: mysql
      tier: mysql
  strategy:
     type: Recreate
  template:
     metadata: 
       labels: 
         app: mysql
         tier: mysql
     spec: 
       containers: 
       - name: mysql
         image: mysql:5.6
         env:                            #\\\ see look 
          -  name: MYSQL_ROOT_PASSWORD
             value: redhat                   ## look see 
         ports: 
         - containerPort: 3306
           name: mysql
"
