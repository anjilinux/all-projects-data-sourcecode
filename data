apiVersion: apps/v1
kind: Deployment
metadata: 
   name: mysql
   labels: 
      app: mysql
spec: 
  selector: 
     matchLabels: 
       app: mysql
       tier: mysql
  strategy: 
     type: Recreate
  template: 
     metadata:
        labels:
          app: mysql
          tier: mysql
     spec: 
       containers:
       - name: mysql
         image: mysql
         env:
         - name: MYSQL_ROOT_PASSWORD
           valueFrom:  
              configMapKeyRef:
                 name: devops
                 key: password
"                                      
anji@master:~$ kubectl get po 
