    kubeadm.kubernetes.io/kube-apiserver.advertise-address.endpoint: 192.168.68.138:6443
  creationTimestamp: null
  labels:
    component: kube-apiserver
    tier: control-plane
  name: kube-apiserver
  namespace: kube-system
