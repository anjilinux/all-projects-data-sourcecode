apiVersion: apps/v1
kind: Deployment
metadata: 
   name: mysql
   labels: 
     app: mysql
spec: 
   selector: 
     matchLabels:
        app: mysql
        tier: mysql
   strategy: 
      type: Recreate
   template: 
      metadata: 
        labels: 
           app: mysql
           tier: mysql
      spec:
        containers:
        - image: mysql
          name: mysql
          env: 
          - name: MYSQL_ROOT_PASSWORD     
            valueFrom:                    ## see look 
              secretKeyRef:            /// see look 
                name: book             ## book 
                key: password
"                                  
anji@master:~$ kubectl get po,secret  -o wide 
